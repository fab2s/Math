{
    "name" : "fab2s/math",
    "description" : "A Base10 high precision math helper",
    "type" : "library",
    "authors" : [{
        "name" : "Fabrice de Stefanis"
    }],
    "keywords" : [
        "math",
        "PHP",
        "Simple",
        "Base10",
        "decimal",
        "BcMath",
        "HighPrecision",
        "laravel"
    ],
    "license" : [
        "MIT"
    ],
    "require" : {
        "php": "^8.1",
        "ext-bcmath": "*",
        "fab2s/context-exception": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.11",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "fab2s\\Math\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "fab2s\\Math\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf .*.cache"
        ],
        "post-install-cmd": [
            "rm -rf .*.cache"
        ],
        "fix": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/pint --ansi --config pint.json --"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpunit --colors --"
        ],
        "cov": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpunit --colors --coverage-html ./cov --"
        ],
        "stan": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpstan analyse -c ./phpstan.neon --ansi --"
        ],
        "stan-tests": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpstan analyse -c ./phpstan-tests.neon --ansi --"
        ]
    },
    "suggest": {
        "ext-gmp": "For faster Math::baseConvert up to base62"
    }
}
